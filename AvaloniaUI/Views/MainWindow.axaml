<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:AvaloniaUI.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaUI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaUI">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <TabControl>
        <TabItem Header="Distance">
            <views:DistanceView DataContext="{Binding DistanceViewModel}"/>
        </TabItem>
        <TabItem Header="Warehouse">
            <views:WarehouseView DataContext="{Binding WarehouseViewModel}"/>
        </TabItem>
        <TabItem Header="Keyboard">
            <StackPanel Background="#FFE5E5E5">
                    
            </StackPanel>
        </TabItem>
    </TabControl>

</Window>
