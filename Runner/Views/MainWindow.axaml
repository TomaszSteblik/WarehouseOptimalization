<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Runner.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Runner.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Runner"
        Background="#3b3b3b">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <StackPanel>
        <WrapPanel>
            <TextBox Text="{Binding DataFilePath}" Width="500" Margin="10"></TextBox>
            <Button Command="{Binding SelectData}" CommandParameter="{Binding}" Padding="10">Select file</Button>
        </WrapPanel>
        <WrapPanel>
            <TextBlock Text="{Binding Result}" Margin="10" Width="200"></TextBlock>
            <Button Command="{Binding RunDistances}" CommandParameter="{Binding}" Margin="10">Run</Button>
        </WrapPanel>
        
    </StackPanel>
    

</Window>
